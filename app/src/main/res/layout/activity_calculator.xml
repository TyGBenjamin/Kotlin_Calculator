<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Wrapper">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/math_view"
        style="@style/CalcTextWrapper"
        app:cardCornerRadius="0dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/equation_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:textAlignment="textEnd"
            android:textAppearance="?attr/textAppearanceHeadline3"
            android:textColor="@color/gray_500"
            tools:ignore="RtlCompat" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/answer_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textAppearance="?attr/textAppearanceHeadline3"
            tools:ignore="RtlCompat" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/row_one"
        style="@style/ButtonContainer">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear_btn"
            android:layout_weight="3"
            style="@style/CalcButton.Function"
            android:text="@string/clear" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/divide_btn"
            style="@style/CalcButton.Operator"
            android:text="@string/divide" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_two"
        style="@style/ButtonContainer">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/seven_btn"
            style="@style/CalcButton"
            android:text="@string/_7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/eight_btn"
            style="@style/CalcButton"
            android:text="@string/_8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nine_btn"
            style="@style/CalcButton"
            android:text="@string/_9" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/multiply_btn"
            style="@style/CalcButton.Operator"
            android:text="@string/multiply" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_three"
        style="@style/ButtonContainer">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/four_btn"
            style="@style/CalcButton"
            android:text="@string/_4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/five_btn"
            style="@style/CalcButton"
            android:text="@string/_5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/six_btn"
            style="@style/CalcButton"
            android:text="@string/_6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/subtract_btn"
            style="@style/CalcButton.Operator"
            android:text="@string/subtract" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_four"
        style="@style/ButtonContainer">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/one_btn"
            style="@style/CalcButton"
            android:text="@string/_1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/two_btn"
            style="@style/CalcButton"
            android:text="@string/_2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/three_btn"
            style="@style/CalcButton"
            android:text="@string/_3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_btn"
            style="@style/CalcButton.Operator"
            android:text="@string/add" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_five"
        style="@style/ButtonContainer">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/zero_btn"
            style="@style/CalcButton"
            android:text="@string/_0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/decimal_btn"
            style="@style/CalcButton"
            android:text="@string/decimal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_btn"
            style="@style/CalcButton.Operator"
            android:text="@string/delete" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/equals_btn"
            style="@style/CalcButton.Function"
            android:text="@string/equals" />

    </LinearLayout>

</LinearLayout>
